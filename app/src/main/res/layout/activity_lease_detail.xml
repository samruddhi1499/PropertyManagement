<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Back"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>

    <!-- Lease Detail Information -->
    <TextView
        android:id="@+id/leaseDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: 25"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact: 1234567890"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailRoomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room: 101"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: example@email.com"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date: 2024-01-01"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date: 2025-01-01"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailRentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent Amount: $1200"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit: $1200"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailPaymentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Status: Pending"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/leaseDetailSpecialConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Conditions: None"
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
