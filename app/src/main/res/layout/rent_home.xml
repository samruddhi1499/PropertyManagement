<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/RentTrackingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/lavender"
            android:layout_gravity="center"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lavender"
            android:layout_marginVertical="16dp"/>

        <!-- Item 1 -->
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/listImage1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/man1"
                android:scaleType="centerCrop"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/listName1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/listImage1"
                android:text="John"
                android:textColor="@color/lavender"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/listMessage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_below="@id/listName1"
                android:layout_toEndOf="@id/listImage1"
                android:text="Room 101"
                android:textSize="16sp"
                android:textColor="@color/lavender"/>

            <Button
                android:id="@+id/listApproveButton1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentEnd="true"
                android:text="Not Paid"
                android:textSize="16sp"
                android:backgroundTint="@color/lavender"/>


        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_200"
            android:layout_marginVertical="8dp"/>

        <!-- Item 2 -->
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/listImage2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/man2"
                android:scaleType="centerCrop"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/listName2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/listImage2"
                android:text="Jane"
                android:textColor="@color/lavender"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/listMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_below="@id/listName2"
                android:layout_toEndOf="@id/listImage2"
                android:text="HumberWood"
                android:textSize="16sp"
                android:textColor="@color/lavender"/>

            <Button
                android:id="@+id/listApproveButton2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentEnd="true"
                android:text="Not Paid"
                android:textSize="16sp"
                android:backgroundTint="@color/lavender"/>

        </RelativeLayout>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lavender"
            android:layout_marginVertical="8dp"/>
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/listImage3"
